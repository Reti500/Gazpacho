<div class="row">
  <%= simple_form_for @question, html: {class:'col-md-8 col-md-push-2', role:'form'} do |f| %>
    <% if @question.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@question.errors.count, "error") %> prohibited this question from being saved:</h2>

        <ul>
        <% @question.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <%= f.input :title, input_html: {class:'form-control'} %>
    <%= f.input :qtype_id, collection: Qtype.all, label_method: :name, input_html: {class:'form-control'} %>
    <%= f.association :answers, as: :string, input_html: {class:'form-control'} %>
    <%= f.input :form_id, collection: current_user.forms, label_method: :name, input_html: {class:'form-control'} %>

    <p></p>

    <div class="actions">
      <%= f.submit 'Guardar', class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
