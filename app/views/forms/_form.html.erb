<div class="row">
  <%= simple_form_for @form, html: { class: 'col-md-8 col-md-push-2', role: 'form'} do |f| %>
    <% if @form.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@form.errors.count, "error") %> prohibited this form from being saved:</h2>

        <ul>
        <% @form.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <%= f.input :name, input_html: {class:'form-control'} %>
    <%= f.input :project_id, collection: current_user.projects, label_method: :name, input_html: {class:'form-control'} %>

    <p></p>

    <div class="actions">
      <%= f.submit 'Guardar', class: 'btn btn-success' %>
    </div>
  <% end %>

</div>
